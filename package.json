{
  "name": "fastjudge",
  "displayName": "FastJudge",
  "description": "Lightning-fast local judge for compiling, running, and testing code across languages",
  "version": "0.2.0",
  "license": "MIT",
  "author": {
    "name": "Shrut Vanpariya",
    "email": "shrutvanpariya@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shrut-vanpariya/fastjudge.git"
  },
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Testing",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:cpp",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fastjudge.openPanel",
        "title": "Open Panel",
        "category": "FastJudge",
        "icon": "$(beaker)"
      },
      {
        "command": "fastjudge.runAll",
        "title": "Run All Tests",
        "category": "FastJudge",
        "icon": "$(play)"
      },
      {
        "command": "fastjudge.addTestCase",
        "title": "Add Test Case",
        "category": "FastJudge",
        "icon": "$(add)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fastjudge",
          "title": "FastJudge",
          "icon": "$(beaker)"
        }
      ]
    },
    "views": {
      "fastjudge": [
        {
          "type": "webview",
          "id": "fastjudge.panel",
          "name": "Test Cases",
          "icon": "$(beaker)"
        }
      ]
    },
    "configuration": {
      "title": "FastJudge",
      "properties": {
        "fastjudge.general.timeLimitMs": {
          "type": "number",
          "default": 2000,
          "minimum": 100,
          "maximum": 60000,
          "description": "Time limit for code execution in milliseconds"
        },
        "fastjudge.general.comparisonMode": {
          "type": "string",
          "enum": [
            "exact",
            "trim",
            "ignoreWhitespace"
          ],
          "enumDescriptions": [
            "Exact character-by-character match",
            "Ignore trailing whitespace on each line (recommended)",
            "Collapse all whitespace to single spaces"
          ],
          "default": "trim",
          "description": "Output comparison mode"
        },
        "fastjudge.general.executionMode": {
          "type": "string",
          "enum": [
            "sequential",
            "sequential-live",
            "parallel"
          ],
          "enumDescriptions": [
            "Run tests one at a time, update UI after all complete (fastest for simple tests)",
            "Run tests one at a time, update UI after each test (recommended)",
            "Run all tests concurrently, update UI as each finishes (fastest for slow tests)"
          ],
          "default": "sequential-live",
          "description": "Test execution mode"
        },
        "fastjudge.general.resultRetentionDays": {
          "type": "number",
          "default": 7,
          "minimum": 1,
          "maximum": 30,
          "description": "Days to keep test results before auto-cleanup"
        },
        "fastjudge.languages": {
          "type": "object",
          "description": "Custom language configurations. Keys are the language IDs (e.g., 'cpp', 'rust').",
          "default": {
            "cpp": {
              "name": "C++",
              "extensions": [
                ".cpp",
                ".cc",
                ".cxx",
                ".c++"
              ],
              "compileArgs": [
                "g++",
                "-O2",
                "-std=c++17",
                "-Wall",
                "${sourceFile}",
                "-o",
                "${executableFile}"
              ],
              "runArgs": [
                "${executableFile}"
              ]
            },
            "python": {
              "name": "Python",
              "extensions": [
                ".py"
              ],
              "runArgs": [
                "python",
                "${sourceFile}"
              ]
            },
            "java": {
              "name": "Java",
              "extensions": [
                ".java"
              ],
              "compileArgs": [
                "javac",
                "-d",
                "${outputDir}",
                "${sourceFile}"
              ],
              "runArgs": [
                "java",
                "-cp",
                "${outputDir}",
                "${className}"
              ],
              "outputExtension": ".class"
            },
            "javascript": {
              "name": "JavaScript",
              "extensions": [
                ".js"
              ],
              "runArgs": [
                "node",
                "${sourceFile}"
              ]
            }
          },
          "additionalProperties": {
            "type": "object",
            "required": [
              "name",
              "extensions",
              "runArgs"
            ],
            "properties": {
              "name": {
                "type": "string",
                "description": "Display name"
              },
              "extensions": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "File extensions for this language (e.g., ['.rs'])"
              },
              "compileArgs": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Arguments to compile the script. Available variables: ${sourceFile}, ${outputDir}, ${executableFile}, ${className}"
              },
              "runArgs": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Arguments to run the script. Available variables: ${sourceFile}, ${outputDir}, ${executableFile}, ${className}"
              },
              "outputExtension": {
                "type": "string",
                "description": "File extension of compiled output (e.g., '.class' for Java). Defaults to platform binary (.exe on Windows)"
              }
            }
          }
        },
        "fastjudge.companion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Competitive Companion server to receive problems from browser"
        },
        "fastjudge.companion.port": {
          "type": "number",
          "enum": [
            27121,
            10045,
            10043,
            10042,
            6174,
            4244,
            1327
          ],
          "enumDescriptions": [
            "27121 - CPH (Competitive Programming Helper)",
            "10045 - CP Editor",
            "10043 - Caide / AI Virtual Assistant",
            "10042 - acmX",
            "6174 - Mind Sport",
            "4244 - Hightail",
            "1327 - cpbooster"
          ],
          "default": 27121,
          "description": "Port for Competitive Companion server"
        },
        "fastjudge.companion.defaultLanguage": {
          "type": "string",
          "default": "",
          "description": "Default language for new files (empty = ask each time). Use the display name (e.g., 'C++', 'Rust') or language ID (e.g., 'cpp', 'rust')."
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "command": "fastjudge.runAll",
          "when": "resourceLangId =~ /cpp|python|java|javascript/",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "fastjudge.runAll",
        "key": "ctrl+f9",
        "when": "resourceLangId =~ /cpp|python|java|javascript/"
      },
      {
        "command": "fastjudge.addTestCase",
        "key": "ctrl+f10",
        "when": "resourceLangId =~ /cpp|python|java|javascript/"
      },
      {
        "command": "fastjudge.openPanel",
        "key": "ctrl+f11"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./ && node esbuild.js --production",
    "compile:extension": "tsc -p ./",
    "compile:webview": "node esbuild.js",
    "watch": "tsc -watch -p ./",
    "watch:webview": "node esbuild.js --watch",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ignore-pattern 'src/ui/webview/app/**'",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}