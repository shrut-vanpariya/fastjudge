{
  "name": "fastjudge",
  "displayName": "FastJudge",
  "description": "Lightning-fast local judge for compiling, running, and testing code across languages",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Testing",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:cpp",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fastjudge.openPanel",
        "title": "Open FastJudge Panel",
        "icon": "$(beaker)"
      },
      {
        "command": "fastjudge.runAll",
        "title": "Run All Tests",
        "icon": "$(play)"
      },
      {
        "command": "fastjudge.addTestCase",
        "title": "Add Test Case",
        "icon": "$(add)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fastjudge",
          "title": "FastJudge",
          "icon": "$(beaker)"
        }
      ]
    },
    "views": {
      "fastjudge": [
        {
          "type": "webview",
          "id": "fastjudge.panel",
          "name": "Test Cases"
        }
      ]
    },
    "configuration": {
      "title": "FastJudge",
      "properties": {
        "fastjudge.timeLimitMs": {
          "type": "number",
          "default": 2000,
          "description": "Time limit for code execution in milliseconds"
        },
        "fastjudge.comparisonMode": {
          "type": "string",
          "enum": [
            "exact",
            "trim",
            "ignoreWhitespace"
          ],
          "default": "trim",
          "description": "Output comparison mode"
        },
        "fastjudge.cpp.command": {
          "type": "string",
          "default": "g++",
          "description": "C++ compiler command"
        },
        "fastjudge.cpp.args": {
          "type": "array",
          "default": [
            "-O2",
            "-std=c++17",
            "-Wall"
          ],
          "description": "C++ compiler arguments"
        },
        "fastjudge.python.command": {
          "type": "string",
          "default": "python",
          "description": "Python interpreter command"
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "command": "fastjudge.runAll",
          "when": "resourceLangId =~ /cpp|python|java|javascript/",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}